<%- include('./partials/nav.ejs') %>
<div class="container">
  <div class="page-header">
    <h1>Notifications</h1>
  </div>
  <table class="table">
    <thead>
      <tr>
        <!-- <th scope="col">#</th> -->
  
        <th scope="col">Name</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% user.notifications.forEach(notification => { %>
      <tr>
        <td><%= notification.content %> <small><%= notification.createdAt %></small></td>
        <td><a class="btn btn-danger" href="{{url_for('main.delete_notification', id=notification.id)}}">Delete</a></td>
      </tr>
      <% }) %>
    </tbody>
  </table>

</div>
