<%- include('../partials/nav.ejs') %>
<div class="container">
    <div class="row" style="display: flex; align-items: center; justify-content: center;">
        <div class="col-md-4 col-md-offset-4">
            <h1>Sign Up</h1>
            <!-- Validation Errors -->
            <%- include('../partials/messages.ejs') %>
            <form action="/signup" method="POST">
                <div class="form-group">
                    <label for="email">Name</label>
                    <input type="text" class="form-control" name="name" id="name" value="<%= typeof name != 'undefined' ? name : '' %>">
                </div>
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" name="email" id="email" value="<%= typeof email != 'undefined' ? email : '' %>">
              </div>
              <div class="form-group">
                <label for="email">Username</label>
                <input type="text" class="form-control" name="username" id="username" value="<%= typeof username != 'undefined' ? username : '' %>">
            </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" id="password" value="<%= typeof password != 'undefined' ? password : '' %>">
                </div>
                <div class="form-group">
                  <label for="password">Password2</label>
                  <input type="password" class="form-control" name="password2" id="password2">
              </div>
                <input type="hidden" name="_csrf" value="">
                <button style="width: 100%; height: 50px;" type="submit" class="btn btn-primary">Sign Up</button>
      
            </form>
        </div>
    
    </div>
    
</div>
